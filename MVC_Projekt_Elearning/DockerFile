# Base image: .NET SDK (development stage)
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the solution file and restore dependencies
COPY MVC_Projekt_Elearning.sln ./
COPY MVC_Projekt_Elearning/MVC_Projekt_Elearning.csproj ./MVC_Projekt_Elearning/
RUN dotnet restore MVC_Projekt_Elearning.sln

# Copy the rest of the project files
COPY . ./

# Publish the application in release mode
RUN dotnet publish MVC_Projekt_Elearning/MVC_Projekt_Elearning.csproj -c Release -o /app/publish

# Base image: .NET runtime (production stage)
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS final

# Set the working directory inside the container
WORKDIR /app

# Copy the published application from the build stage
COPY --from=build /app/publish .

# Expose the port the app runs on
EXPOSE 80

# Define the entry point for the container
ENTRYPOINT ["dotnet", "MVC_Projekt_Elearning.dll"]
