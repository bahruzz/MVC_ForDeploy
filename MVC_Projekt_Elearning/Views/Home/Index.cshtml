@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}
<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
       @foreach (var item in Model.Sliders)
        {
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="~/img/@item.Image"  alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                                <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Best Online Courses</h5>
                                <h1 class="display-3 text-white animated slideInDown">@item.Title</h1>
                                <p class="fs-5 text-white mb-4 pb-2">@item.Description</p>
                                <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Read More</a>
                                <a href="" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Join Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
      
    </div>
</div>
<!-- Carousel End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var item in Model.Informations)
            {
                <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="service-item text-center pt-3">
                        <div class="p-4">
                            <img src="~/img/@item.Image" class="mt-3" style="height:80px;width:80px;"></img>
                            <h5 class="mb-3 mt-3">@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
          
        </div>
    </div>
</div>
<!-- Service End -->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="img-fluid position-absolute w-100 h-100" src="~/img/@Model.Abouts.Image" alt="" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">About Us</h6>
                <h1 class="mb-4">@Model.Abouts.Title</h1>
                <p class="mb-4">@Model.Abouts.Description</p>
                
                <div class="row gy-2 gx-4 mb-4">
                   @foreach (var item in Model.Informations)
                    {
                        <div class="col-sm-6">
                            <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>@item.Title</p>
                        </div>
                    }
                    
               
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" href="">Read More</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Categories Start -->
<div class="container-xxl py-5 category">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Categories</h6>
            <h1 class="mb-5">Courses Categories</h1>
        </div>
        <div class="row g-3">
            <div class="col-lg-7 col-md-6">
                <div class="row g-3">
                    <div class="col-lg-12 col-md-12 wow zoomIn" data-wow-delay="0.1s">
                        <a class="position-relative d-block overflow-hidden" href="">
                            <img class="img-fluid" src="~/img/@Model.CategoryLast.Image" alt="">
                            <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                                <h5 class="m-0">@Model.CategoryLast.CategoryName</h5>
                                <small class="text-primary">@Model.CategoryLast.CourseCount</small>
                            </div>
                        </a>
                    </div>

                    @foreach (var item in Model.Categories)
                    {
                        <div class="col-lg-6 col-md-12 wow zoomIn" data-wow-delay="0.3s">
                            <a class="position-relative d-block overflow-hidden" href="">
                                <img class="img-fluid" src="~/img/@item.Image" alt="">
                                <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                                    <h5 class="m-0">@item.CategoryName</h5>
                                    <small class="text-primary">@item.CourseCount</small>
                                </div>
                            </a>
                        </div>
                    }
                   
                </div>
            </div>
            <div class="col-lg-5 col-md-6 wow zoomIn" data-wow-delay="0.7s" style="min-height: 350px;">
                <a class="position-relative d-block h-100 overflow-hidden" href="">
                    <img class="img-fluid position-absolute w-100 h-100" src="~/img/@Model.CategoryFirst.Image" alt="" style="object-fit: cover;">
                    <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin:  1px;">
                        <h5 class="m-0">@Model.CategoryFirst.CategoryName</h5>
                        <small class="text-primary">@Model.CategoryFirst.CourseCount</small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Categories Start -->
<!-- Courses Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Courses</h6>
            <h1 class="mb-5">Popular Courses</h1>
        </div>
        <div class="row g-4 justify-content-center">

            @foreach (var item in Model.Courses)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="course-item bg-light">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid" src="~/img/@item.CoursesImages.FirstOrDefault(m=>m.IsMain).Name" alt="">
                            <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Join Now</a>
                            </div>
                        </div>
                        <div class="text-center p-4 pb-0">
                            <h3 class="mb-0">$@item.Price</h3>
                            <div class="mb-3">
                                @if (item.Rating == 5)
                                {
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>

                                }
                                @if (item.Rating == 4)
                                {
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>


                                }
                                @if (item.Rating == 3)
                                {
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>

                                }
                                @if (item.Rating == 2)
                                {
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>

                                }
                                @if (item.Rating == 1)
                                {
                                    <small class="fa fa-star text-primary"></small>

                                }
                            </div>
                            <h5 class="mb-4">@item.Name</h5>
                        </div>
                        <div class="d-flex border-top">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.Instructor.FullName</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Duration Hrs</small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>30 Students</small>
                        </div>
                    </div>
                </div>

            }




        </div>
    </div>
</div>
<!-- Courses End -->
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Instructors</h6>
            <h1 class="mb-5">Expert Instructors</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model.Instructors)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item bg-light">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="~/img/@item.Image" alt="">
                        </div>
                        <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                            <div class="bg-light d-flex justify-content-center pt-2 px-1">
                                @foreach (var ing in @item.InstructorSocials)
                                {

                                    @if (ing.SocialLink == "www.facebook.com")
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" @(ing.SocialLink == "www.facebook.com" ? "" : "d-none")><i class="fab fa-facebook-f"></i></a>

                                    }
                                    @if (ing.SocialLink == "www.twitter.com")
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" @(ing.SocialLink == "www.twitter.com" ? "" : "d-none")><i class="fab fa-twitter"></i></a>

                                    }
                                    @if (ing.SocialLink == "www.instagram.com")
                                    {
                                        <a class="btn btn-sm-square btn-primary mx-1" @(ing.SocialLink == "www.instagram.com" ? "" : "d-none")><i class="fab fa-instagram"></i></a>

                                    }


                                }

                            </div>
                        </div>
                        <div class="text-center p-4">
                            <h5 class="mb-0">@item.FullName</h5>
                            <small>@item.Designation</small>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
<!-- Team End -->
<!-- Testimonial Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Testimonial</h6>
            <h1 class="mb-5">Our Students Say!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">
            @foreach (var item in Model.Students)
            {
                <div class="testimonial-item text-center">
                    <img class="border rounded-circle p-2 mx-auto mb-3" src="~/img/@item.Image" style="width: 80px; height: 80px;">
                    <h5 class="mb-0">@item.FullName</h5>
                    <p>@item.Profession</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">@item.Biography</p>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
<!-- Testimonial End -->
