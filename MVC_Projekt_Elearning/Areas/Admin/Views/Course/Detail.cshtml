@model CourseDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div id="main" class="main" style="background-color:blueviolet">


    <div class="container mt-5" style="color:white">
        <h1 class=" text-center" style="color:white">Course detail</h1>
        <div class="images mt-3">
            @foreach (var item in Model.Images)
            {
                <img src="~/img/@item.Image" style="width: 150px;height:150 px;@(item.IsMain ? "border:5px solid red;" : "")" />
            }
        </div>
        <div class="course-info">
            <p><b>Name:</b> @Model.Name</p>
            <p><b>Duration:</b> @Model.Duration hr.</p>
            <p><b>Instructor:</b> @Model.Instructor</p>
            <p><b>Rating:</b> @Model.Rating</p>
            <p><b>Category:</b> @Model.Category</p>
            <p><b>Price:</b> $@Model.Price</p>

            <p><b>Created date:</b> @Model.CreatedDate</p>


        </div>
        <a asp-action="Index" class="btn btn-success mt-2">Back</a>
    </div>


</div>
