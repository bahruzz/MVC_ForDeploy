@model CourseCreateVM

@{
    ViewData["Title"] = "Create";
}


<main id="main" class="main">
    <div class="container mt-5">
        <form class="crt" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Information</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" id="inputText" placeholder="Name...">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Duration" class="form-control" id="inputText" placeholder="Duration...">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                    <input asp-for="Rating" type="number" class="form-control" id="inputText" placeholder="Rating...">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                    <input asp-for="Price" type="number" class="form-control" id="inputText" placeholder="Price...">
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <label for="category">Category</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                    <label for="category">Instructor</label>
                    <select asp-for="InstructorId" asp-items="@ViewBag.instructor" class="form-control"></select>

                    <input asp-for="Images" class="form-control" id="inputText" placeholder="Image...">
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" asp-action="Index">Close</a>
            </div>
        </form><!-- End Horizontal Form -->

    </div>
</main>
